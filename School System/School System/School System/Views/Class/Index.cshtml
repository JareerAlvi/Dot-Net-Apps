@model IEnumerable<School_System.Models.Class>
@{
    ViewData["Title"] = "Manage Classes";
}

<div class="flex justify-between items-center mb-4">
    <h2 class="text-2xl font-bold text-purple-700">Classes List</h2>
    <a asp-action="Create" class="bg-purple-500 hover:bg-purple-600 text-white px-4 py-2 rounded-lg shadow">
        + Add New Class
    </a>
</div>

<div class="overflow-x-auto">
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="mb-4 px-4 py-2 bg-red-100 border border-red-300 text-red-800 rounded">
            @TempData["ErrorMessage"]
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="mb-4 px-4 py-2 bg-green-100 border border-green-300 text-green-800 rounded">
            @TempData["SuccessMessage"]
        </div>
    }

    <table class="min-w-full bg-white border border-gray-300 rounded-lg overflow-hidden">
        <thead class="bg-gray-100">
            <tr>
                <th class="px-4 py-2 border">ID</th>
                <th class="px-4 py-2 border">Class Name</th>
                <th class="px-4 py-2 border">Room Number</th>
                <th class="px-4 py-2 border">Head Teacher</th>
                <th class="px-4 py-2 border">Max Capacity</th>
                <th class="px-4 py-2 border text-center">Current Students</th> <!-- New column -->
                <th class="px-4 py-2 border text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cls in Model)
            {
                <tr class="hover:bg-gray-50">
                    <td class="px-4 py-2 border">@cls.ClassId</td>
                    <td class="px-4 py-2 border">@cls.ClassName</td>
                    <td class="px-4 py-2 border">@cls.RoomNumber</td>
                    <td class="px-4 py-2 border">@cls.TeacherName</td>
                    <td class="px-4 py-2 border">@cls.MaxCapacity</td>

                    <td class="px-4 py-2 border text-center font-semibold text-indigo-600">
                        @cls.Students?.Count 
                    </td>
                    <td class="px-4 py-2 border text-center">
                        <div class="flex justify-center space-x-2">
                            <!-- Edit -->
                            <a asp-action="Edit" asp-route-id="@cls.ClassId"
                               class="bg-yellow-500 hover:bg-yellow-600 text-white px-3 py-1 rounded-md shadow">
                                Edit
                            </a>

                            <!-- Delete -->
                            <form asp-action="DeleteConfirmed" asp-route-id="@cls.ClassId" method="post" style="display:inline;">
                                @Html.AntiForgeryToken()
                                <button type="button"
                                        class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded-md shadow"
                                        onclick="confirmDelete(this.form)">
                                    Delete
                                </button>
                            </form>
                        </div>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        function confirmDelete(form) {
            Swal.fire({
                title: "Are you sure?",
                text: "This will permanently delete the class.",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#d33",
                cancelButtonColor: "#6b7280",
                confirmButtonText: "Yes, delete it!",
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit();
                }
            });
        }
    </script>

}
