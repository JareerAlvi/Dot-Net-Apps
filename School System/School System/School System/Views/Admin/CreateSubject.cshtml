@model School_System.Models.Subject
@{
    ViewData["Title"] = "Add New Subject";
}

<div class="max-w-2xl mx-auto bg-white p-6 rounded-2xl shadow-md">
    <h2 class="text-3xl font-bold mb-6 text-gray-800">Add New Subject</h2>

    <form asp-action="CreateSubject" method="post" class="space-y-6">
        <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

        <!-- Subject Name -->
        <div>
            <label asp-for="SubjectName" class="block font-semibold text-gray-700 mb-1"></label>
            <input asp-for="SubjectName" class="w-full border border-gray-300 rounded-lg p-3" />
            <span asp-validation-for="SubjectName" class="text-red-500 text-sm"></span>
        </div>

        <!-- Class Selection -->
        <div>
            <label asp-for="ClassId" class="block font-semibold text-gray-700 mb-1"></label>
            <select asp-for="ClassId" asp-items="ViewBag.Classes" class="w-full border border-gray-300 rounded-lg p-3">
                <option value="">-- Select Class --</option>
            </select>
            <span asp-validation-for="ClassId" class="text-red-500 text-sm"></span>
        </div>

        <div class="flex space-x-3">
            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-5 py-2 rounded-lg shadow">Save</button>
            <a asp-action="ManageSubjects" class="bg-gray-200 hover:bg-gray-300 text-gray-800 px-5 py-2 rounded-lg shadow">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <!-- Toast Notifications -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.querySelector("form").addEventListener("submit", function (e) {
            if (!$("form").valid()) {
                e.preventDefault();
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Please fill all required fields!'
                });
            }
        });
    </script>
}
