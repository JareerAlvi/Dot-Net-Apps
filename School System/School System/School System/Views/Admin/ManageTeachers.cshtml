@model IEnumerable<TeacherViewModel>


@{
    ViewData["Title"] = "Manage Teachers";
}

<div class="bg-white p-6 rounded-lg shadow max-w-7xl mx-auto mt-6">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-semibold text-gray-800">Manage Teachers</h2>
        <a href="/Admin/CreateTeacher" class="bg-indigo-600 hover:bg-indigo-700 text-white px-5 py-2 rounded-md text-sm font-medium transition duration-200 shadow-sm">
            + Add New Teacher
        </a>
    </div>

    <div class="overflow-x-auto rounded-lg border border-gray-200 shadow-sm">
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="text-red-600 text-sm mb-2">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>@error.ErrorMessage</div>
                }
            </div>
        }
        <table class="min-w-full divide-y divide-gray-200 text-sm text-gray-700">
            <thead class="bg-indigo-50 text-indigo-800 uppercase text-xs font-semibold tracking-wide">
                <tr>
                    <th class="px-6 py-3 text-left">Full Name</th>
                    <th class="px-6 py-3 text-left">Email</th>
                    <th class="px-6 py-3 text-left">Qualification</th>
                    <th class="px-6 py-3 text-left">Contact</th>
                    <th class="px-6 py-3 text-left">Hire Date</th>
                    <th class="px-6 py-3 text-left">Salary</th>
                    <th class="px-6 py-3 text-left">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100 bg-white">
                @foreach (var teacher in Model)
                {
                    var rowClass = teacher.IsHeadTeacher ? "bg-yellow-50" : "";
                    <tr class="@rowClass hover:bg-gray-50 transition">
                        <td class="px-6 py-4 flex items-center space-x-2">
                            <span>@teacher.FullName</span>
                            @if (teacher.IsHeadTeacher)
                            {
                                <span class="text-xs bg-yellow-200 text-yellow-800 font-semibold px-2 py-0.5 rounded-full">
                                    🏫 Head Teacher
                                </span>
                            }
                        </td>
                        <td class="px-6 py-4">@teacher.Email</td>
                        <td class="px-6 py-4">@teacher.Qualification</td>
                        <td class="px-6 py-4">@teacher.ContactInfo</td>
                        <td class="px-6 py-4">@teacher.HireDate.ToString("yyyy-MM-dd")</td>
                        <td class="px-6 py-4">@teacher.Salary</td>
                        <td class="px-6 py-4 space-x-3">
                            <a href="/Admin/TeacherProfile/@teacher.TeacherId" class="text-indigo-600 hover:underline">View</a>
                            <a href="/Admin/EditTeacher/@teacher.TeacherId" class="text-yellow-500 hover:underline">Edit</a>
                            <a href="javascript:void(0);" onclick="confirmDelete('/Admin/DeleteTeacher/@teacher.TeacherId')" class="text-red-600 hover:underline">Delete</a>
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
</div>
<!-- Delete Confirmation Modal -->
<div id="deleteModal" class="fixed inset-0 z-50 hidden bg-black bg-opacity-50 flex items-center justify-center">
    <div class="bg-white p-6 rounded-lg shadow-lg w-full max-w-md">
        <h2 class="text-lg font-semibold text-red-600 mb-4">Are you sure?</h2>
        <p class="text-gray-700 mb-6">This action cannot be undone. Do you want to delete this teacher?</p>
        <div class="flex justify-end space-x-3">
            <button id="cancelDelete" class="px-4 py-2 bg-gray-300 text-gray-800 rounded hover:bg-gray-400">Cancel</button>
            <form id="deleteForm" method="post">
                <button type="submit" class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700">Yes, Delete</button>
            </form>
        </div>
    </div>
</div>
<script>
    const modal = document.getElementById('deleteModal');
    const deleteForm = document.getElementById('deleteForm');
    const cancelDelete = document.getElementById('cancelDelete');

    function confirmDelete(url) {
        deleteForm.action = url;
        modal.classList.remove('hidden');
    }

    cancelDelete.addEventListener('click', () => {
        modal.classList.add('hidden');
    });
</script>
