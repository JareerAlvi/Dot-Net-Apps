@model IEnumerable<SchoolManagementSystem.Models.Certificate>

<h2 class="text-2xl font-bold text-gray-800 mb-6">Class 10 Certificates</h2>

<div class="overflow-x-auto bg-white rounded-lg shadow border border-gray-200">

    <form id="filterForm" method="get" class="mb-6 flex flex-wrap gap-6 items-end">
        <!-- Board Year Filter -->
        <div class="flex flex-col">
            <label for="yearFilter" class="text-sm font-medium text-gray-700 mb-1">Board Year</label>
            <select id="yearFilter" name="yearFilter"
                    class="block w-36 rounded border border-gray-300 bg-white px-3 py-2 text-gray-700 focus:border-blue-500 focus:ring focus:ring-blue-300">
                <option value="">All Years</option>
                @foreach (var year in ViewBag.YearList)
                {
                    if (year == ViewBag.SelectedYear)
                    {
                        <option value="@year" selected>@year</option>
                    }
                    else
                    {
                        <option value="@year">@year</option>
                    }
                }
            </select>
        </div>

        <!-- Arrival Status Filter -->
        <div class="flex flex-col">
            <label for="arrivalFilter" class="text-sm font-medium text-gray-700 mb-1">Arrival Status</label>
            <select id="arrivalFilter" name="arrivalFilter"
                    class="block w-36 rounded border border-gray-300 bg-white px-3 py-2 text-gray-700 focus:border-blue-500 focus:ring focus:ring-blue-300">
                <option value="">All</option>
                @{
                    var arrivalOptions = new List<string> { "Arrived", "Not Arrived" };
                    foreach (var option in arrivalOptions)
                    {
                        if (option == ViewBag.SelectedArrival)
                        {
                            <option value="@option" selected>@option</option>
                        }
                        else
                        {
                            <option value="@option">@option</option>
                        }
                    }
                }
            </select>
        </div>

        <!-- Receiving Status Filter -->
        <div class="flex flex-col">
            <label for="receivingFilter" class="text-sm font-medium text-gray-700 mb-1">Receiving Status</label>
            <select id="receivingFilter" name="receivingFilter"
                    class="block w-36 rounded border border-gray-300 bg-white px-3 py-2 text-gray-700 focus:border-blue-500 focus:ring focus:ring-blue-300">
                <option value="">All</option>
                @{
                    var receivingOptions = new List<string> { "Received", "Pending" };
                    foreach (var option in receivingOptions)
                    {
                        if (option == ViewBag.SelectedReceiving)
                        {
                            <option value="@option" selected>@option</option>
                        }
                        else
                        {
                            <option value="@option">@option</option>
                        }
                    }
                }
            </select>
        </div>
    </form>

    <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Student</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Arrival Status</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Receiving Status</th>
                <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
            @foreach (var cert in Model)
            {
                <tr class="hover:bg-gray-50 transition">
                    <td class="px-6 py-4 text-gray-700 font-medium">@cert.Student.FullName</td>
                    <td class="px-6 py-4">
                        @if (cert.HasArrived)
                        {
                            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-semibold bg-green-100 text-green-800">
                                ✅ Arrived at @cert.arrivalDte
                            </span>
                        }
                        else
                        {
                            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-semibold bg-red-100 text-red-800">
                                ❌ Not Arrived
                            </span>
                        }
                    </td>
                    <td class="px-6 py-4">
                        @if (cert.HasReceived)
                        {
                            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-semibold bg-blue-100 text-blue-800">
                                📦 Received at @cert.receivedDate
                            </span>
                        }
                        else
                        {
                            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-semibold bg-yellow-100 text-yellow-800">
                                ⏳ Pending
                            </span>
                        }
                    </td>
                    <td class="px-6 py-4 text-center flex justify-center space-x-2">
                        @if (!cert.HasArrived)
                        {
                            <form asp-action="MarkArrived" method="post">
                                <input type="hidden" name="id" value="@cert.CertificateId" />
                                <button type="submit" class="bg-green-500 hover:bg-green-600 text-white px-3 py-1 rounded-md text-sm font-medium transition">Mark Arrived</button>
                            </form>
                        }
                        @if (cert.HasArrived && !cert.HasReceived)
                        {
                            <form asp-action="MarkReceived" method="post">
                                <input type="hidden" name="id" value="@cert.CertificateId" />
                                <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded-md text-sm font-medium transition">Mark Received</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script>
    document.addEventListener("DOMContentLoaded", function() {
        const form = document.getElementById("filterForm");
        const selects = form.querySelectorAll("select");

        selects.forEach(select => {
            select.addEventListener("change", () => {
                form.submit();
            });
        });
    });
</script>