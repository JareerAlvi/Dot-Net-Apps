<Window x:Class="Chatting_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chatting_App"
        mc:Ignorable="d"
        Title="Chatting App"
        Height="450" Width="657"
        WindowStyle="None"
        ResizeMode="CanResize"
        AllowsTransparency="True"
        Background="#FF232121"
        WindowStartupLocation="CenterScreen">

    <Border BorderThickness="1" BorderBrush="Gray">
        <Grid RenderTransformOrigin="0.478,0.505">
            <!-- Fake Title Bar -->
            <DockPanel Background="#FF2C504F" Height="30" VerticalAlignment="Top" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <TextBlock Text=" Chatting App" Foreground="White" VerticalAlignment="Center" FontWeight="Bold" FontSize="14" Margin="10,0" />
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <StackPanel.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </StackPanel.Background>
                    <Button Width="40" Height="30" Content="─" Click="Minimize_Click"/>
                    <!--   <Button Width="40" Height="30" Content="☐" Click="Maximize_Click"/> -->
                    <Button Width="40" Height="30" Content="X" Background="Red" Foreground="White" Click="Close_Click"/>
                </StackPanel>
            </DockPanel>

            <!-- Main Content Area -->
            <Grid Margin="170,107,183,99">
                <Border CornerRadius="10" Background="White" Padding="20"
                HorizontalAlignment="Center"
                Width="300" Margin="0,-21,0,-45">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Login" FontSize="22" FontWeight="Bold"
                           Foreground="#2C3E50" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                        <TextBlock Text="Contact-No:" Foreground="Black" FontWeight="Bold"/>
                        <TextBox x:Name="txtContactNumber" Width="200" Height="30" Margin="0,5,0,10"
                         Padding="5" BorderBrush="#2980B9" BorderThickness="2"  MaxLength="11" PreviewTextInput="NumberValidationTextBox" Background="White" PreviewKeyDown="txtContactNumber_PreviewKeyDown"/>

                        <TextBlock x:Name="lbPass" Text="Password:" Foreground="Black" FontWeight="Bold"/>
                        <PasswordBox  Name="txtPassword" Width="200" Height="30" Margin="0,5,0,15"
                             Padding="5" BorderBrush="#2980B9" BorderThickness="2" PasswordChar="●"/>
                    </StackPanel>
                </Border>
                <TextBlock x:Name="lbWarning" Foreground="Black" FontWeight="Bold" Margin="51,249,51,-29" RenderTransformOrigin="0.48,-0.562"/>
                <Button x:Name="btnLogin"
                        Background="#2980B9" Foreground="White" FontWeight="Bold"
                        Cursor="Hand" Click="Button_Click"  Content="Log-in"  Margin="51,207,177,0"  />
                <Button x:Name="btnSignUp"
                            Background="#2980B9" Foreground="White" FontWeight="Bold"
                            Cursor="Hand" Click="btnSignUp_Click"  Content="Sign-in"  Margin="177,209,51,-2"  />
            </Grid>
        </Grid>
    </Border>
</Window>
