
@{
    ViewData["Title"] = "Contact";
}



<section class="text-gray-600 body-font relative">
    <div class="container px-5 py-24 mx-auto flex sm:flex-nowrap flex-wrap">
        <div class="w-full lg:w-1/2 mx-auto">
            <div class="text-2xl text-gray-500 font-semibold mt-10 text-center lg:text-left lg:ml-2">
                Contact Astroship
            </div>
            <div class="text-xl text-gray-400 font-semibold mt-4 text-center lg:text-left lg:ml-4">
                Have something to say? We are here to help. Fill up
            </div>
            <div class="text-xl text-gray-400 font-semibold text-center lg:text-left lg:ml-4">
                the form or send email or call phone.
            </div>
            <div class="flex items-center mt-4 text-gray-400 justify-center lg:justify-start lg:ml-64">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 mr-2">...</svg>
                1734 Sanfransico, CA 93063
            </div>
            <div class="flex items-center mt-4 text-gray-400 justify-center lg:justify-start lg:ml-64">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 mr-2">...</svg>
                hello@astroshipstarter.com
            </div>
            <div class="flex items-center mt-4 text-gray-400 justify-center lg:justify-start lg:ml-64">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 mr-2">...</svg>
                +1 (987) 4587 899
            </div>
        </div>

        <div class="w-full lg:w-1/2 md:ml-auto bg-white flex flex-col md:py-8 mt-8 md:mt-0">
            <form asp-action="Contact" method="post">
                <div class="relative mb-4">
                    <label for="name" class="leading-7 text-sm text-gray-600">Name</label>
                    <input type="text" id="name" name="name" class="w-full bg-white rounded border border-gray-300 ..." />
                </div>
                <div class="relative mb-4">
                    <label for="email" class="leading-7 text-sm text-gray-600">Email</label>
                    <input type="email" id="email" name="email" class="w-full bg-white rounded border border-gray-300 ..." />
                </div>
                <div class="relative mb-4">
                    <label for="message" class="leading-7 text-sm text-gray-600">Message</label>
                    <textarea id="message" name="message" class="w-full bg-white rounded border border-gray-300 h-32 ..."></textarea>
                </div>
                <button type="submit" class="text-white bg-black border-0 py-2 px-6 ...">Submit</button>
                <p class="text-xs text-gray-500 mt-3">Chicharrones blog helvetica normcore iceland tousled brook viral artisan.</p>
            </form>
        </div>
    </div>
</section>
