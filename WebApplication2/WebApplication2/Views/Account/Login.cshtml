@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="bg-white p-10 rounded-lg shadow-md w-full max-w-md">
        <h2 class="text-2xl font-bold text-center mb-6">Welcome Back</h2>

        <form asp-action="Login" method="post" class="space-y-6">
            <div>
                <label asp-for="Email" class="block text-sm font-medium text-gray-700">Email</label>
                <input asp-for="Email" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" />
                <span asp-validation-for="Email" class="text-sm text-red-600"></span>
            </div>

            <div>
                <label asp-for="Password" class="block text-sm font-medium text-gray-700">Password</label>
                <input asp-for="Password" type="password" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" />
                <span asp-validation-for="Password" class="text-sm text-red-600"></span>
            </div>

            <div class="flex items-center">
                <input asp-for="RememberMe" type="checkbox" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" />
                <label asp-for="RememberMe" class="ml-2 block text-sm text-gray-900">Remember me</label>
            </div>

            <button type="submit" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded-md shadow">
                Sign In
            </button>
        </form>

        <p class="mt-6 text-center text-sm text-gray-600">
            Don’t have an account?
            <a asp-controller="Account" asp-action="Register" class="text-indigo-600 hover:text-indigo-800 font-medium">Register here</a>
        </p>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
