@{
    ViewData["Title"] = "List";

}
@model List<TbStudent>
<div class="text-center">
    <h1 class="display-4">List</h1>

</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>FName</th>
            <th>Age</th>
            <th>Grade</th>
            <th>DOB</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr class="hover:bg-gray-100">
                <td class="border px-4 py-2">@student.StudentId</td>
                <td class="border px-4 py-2">@student.FirstName</td>
                <td class="border px-4 py-2">@student.LastName</td>
                <td class="border px-4 py-2">@student.Age</td>
                <td class="border px-4 py-2">@student.Grade</td>
                <td class="border px-4 py-2" type="date">@student.DateOfBirth.ToString("yyyy-MM-dd")</td>
                <td class="border px-4 py-2">@student.Email</td>
                <td>
                    <button type="button" class="btn btn-danger" onclick="confirmDelete(@student.StudentId)">Delete</button>
                    <a asp-controller="Student" asp-action="Edit" asp-route-id="@student.StudentId" class="btn btn-primary">Edit</a>
                </td>

            </tr>
        }

    </tbody>
</table>
<div class="text-center">

    <a  asp-action="Add" class="btn btn-primary mb-3">Add Student</a>

</div>
<div id="deleteModal" class="modal-overlay hidden">
    <div class="modal-content">
        <p>Are you sure you want to delete this student?</p>
        <form id="deleteForm" method="post">
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
            <button type="button" class="btn btn-secondary" onclick="closeModal()">Cancel</button>
        </form>
    </div>
</div>
<script>
    function confirmDelete(studentId) {
        const form = document.getElementById('deleteForm');
        form.action = `/Student/Delete/${studentId}`;
        document.getElementById('deleteModal').classList.remove('hidden');
    }

    function closeModal() {
        document.getElementById('deleteModal').classList.add('hidden');
    }
</script>


