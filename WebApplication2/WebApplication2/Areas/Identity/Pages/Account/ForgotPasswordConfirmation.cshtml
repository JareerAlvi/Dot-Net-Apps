@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md text-center">
        <h2 class="text-2xl font-bold text-gray-800 mb-4">@ViewData["Title"]</h2>
        <p class="text-gray-600 mb-6">
            We've sent a password reset link to your email. Please check your inbox (and spam folder).
        </p>
        <a asp-page="./Login" class="inline-block bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2 px-6 rounded-md transition duration-200">
            Back to Login
        </a>
    </div>
</div>
