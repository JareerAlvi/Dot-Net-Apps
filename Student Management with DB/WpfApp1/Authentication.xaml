<Window x:Class="WpfApp1.Authentication"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Authentication" Height="350" Width="450"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#2C3E50">
    <Grid>
        <Border CornerRadius="10" Background="White" Padding="20"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Width="300" Height="250">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Login" FontSize="22" FontWeight="Bold"
                           Foreground="#2C3E50" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <TextBlock Text="Username:" Foreground="Black" FontWeight="Bold"/>
                <TextBox Name="txtUsername" Width="200" Height="30" Margin="0,5,0,10"
                         Padding="5" BorderBrush="#2980B9" BorderThickness="2"/>

                <TextBlock Text="Password:" Foreground="Black" FontWeight="Bold"/>
                <PasswordBox Name="txtPassword" Width="200" Height="30" Margin="0,5,0,15"
                             Padding="5" BorderBrush="#2980B9" BorderThickness="2"/>

                <Button Content="Login" Width="100" Height="35"
                        Background="#2980B9" Foreground="White" FontWeight="Bold"
                        Click="Login_Click" HorizontalAlignment="Center"
                        Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
